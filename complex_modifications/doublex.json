{
    "title": "Double key",
    "rules": [
        {
            "description": "Double press option to open Quick Note",
            "manipulators": [
                {
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "option_double_pressed",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "q",
                            "modifiers": [
                                "fn"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_option",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "set_variable": {
                                "name": "option_double_pressed",
                                "value": 1
                            }
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "option_double_pressed",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "option_double_pressed",
                                    "value": 0
                                }
                            }
                        ]
                    },
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 200,
                        "basic.to_if_held_down_threshold_milliseconds": 10
                    }
                }
            ]
        }
    ]
}