{
  "title": "To open most often app",
  "rules": [
    {
      "description": "Command+e to open Vocode",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Visual Studio Code.app' ~/Coding/notebook/todo.md"
            }
          ]
        }
      ]
    },
    {
      "description": "Command+g to open Sequel Ace and press Command+P without delay",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'TablePlus.app' && osascript -e 'tell application \"System Events-------\" to keystroke \"p\" using {command down}'"
            }
          ]
        }
      ]
    },
    {
      "description": "Command+j to open windsurf",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'WindSurf.app'"
            }
          ]
        }
      ]
    },
    {
      "description": "Command+h to command+option+shift+ctrl+h to prevent command+h used for hiding",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "h",
              "modifiers": ["control", "option"]
            }
          ]
        }
      ]
    },
    {
      "description": "f1 to toggle iTerm2",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f1"
          },
          "to": [
            {
              "key_code": "f1",
              "modifiers": ["shift"]
            }
          ],
          "conditions": [
              {
                  "type": "frontmost_application_unless",
                  "bundle_identifiers": [
                      "^com.microsoft.rdc.osx.beta"
                  ]
              }
          ]
        }
      ]
    }
    
  ]
}