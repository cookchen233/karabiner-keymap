{
  "title": "Change caps_lock key",
  "rules": [
    {
      "description": "Change caps_lock to left control if pressed with other keys, (Post f19 key when pressed alone, use shift+caps_lock as caps_lock.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "f19"
            }
          ],
          "conditions": [
            {
                "type": "frontmost_application_unless",
                "bundle_identifiers": [
                    "^com.microsoft.rdc.osx.beta"
                ]
            }
          ]
        },{
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
              {
                  "key_code": "left_shift"
              }
          ],
          "conditions": [
            {
                "type": "frontmost_application_if",
                "bundle_identifiers": [
                    "^com.microsoft.rdc.osx.beta"
                ]
            }
          ]
        }
      ]
    }
  ]
}

